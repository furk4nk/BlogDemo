@model BlogDemo.Areas.ApiDemo.Models.ApiViewModel
@{
    ViewData["Title"] = "BlogUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Api Blog Düzenle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/ApiDemo/BlogApi/Index">Api Bloglar</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Düzenle</strong>
            </li>
        </ol>
    </div>
</div>
<div class="ibox-content">
    <div class="row">
        <div class="col-sm-12 ">
            <form role="form" method="post">
                @Html.HiddenFor(x => x.BlogID)
                @Html.HiddenFor(x => x.CategoryID)
                @Html.HiddenFor(x => x.WriterID)
                <div class="form-group">
                    <label>Blog Adı</label>
                    <span class="text-danger" asp-validation-for="BlogTitle"></span>
                    <input type="text" class="form-control" asp-for="BlogTitle">
                </div>
                <div class="form-group">
                    <label>Blog Açıklama</label>
                    <span class="text-danger" asp-validation-for="BlogContext"></span>
                    <textarea class="form-control" cols="10" rows="10" asp-for="BlogContext"></textarea>
                </div>
                <div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <a href="/ApiDemo/BlogApi/Index" class="btn btn-white">Vazgeç</a>
                    <button class="btn btn-primary" type="submit"><strong>Güncelle</strong></button>
                </div>
            </form>
        </div>
    </div>
</div>

