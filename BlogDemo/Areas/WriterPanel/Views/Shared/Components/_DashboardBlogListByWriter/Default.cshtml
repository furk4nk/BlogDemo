@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Postlarınız</h4>
                @if (Model.Count != 0)
                {


                    <div class="d-flex">
                        <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                            <i class="mdi mdi-account-outline icon-sm mr-2"></i>
                            <span>@ViewBag.author.WriterName</span>
                        </div>
                        <div class="d-flex align-items-center text-muted font-weight-light">
                            <i class="mdi mdi-clock icon-sm mr-2"></i>
                            <span>
                                Son Blog:@(
                            ((DateTime)Model[0].BlogCreateDate).ToString("dd MMM yyyy")
                            )
                            </span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 pr-1">
                            @if (Model.Count > 1)
                            {
                                <img src="@Model[0].BlogImage" class="mb-2 mw-100 w-100 rounded" alt="image">

                            }
                            else if (Model.Count > 1)
                            {
                                <img src="@Model[1].BlogImage" class="mw-100 w-100 rounded" alt="image">

                            }
                        </div>
                        <div class="col-6 pl-1">
                            @if (Model.Count > 2)
                            {
                                <img src="@Model[2].BlogImage" class="mb-2 mw-100 w-100 rounded" alt="image">

                            }
                            else if (Model.Count > 3)
                            {
                                <img src="@Model[3].BlogImage" class="mw-100 w-100 rounded" alt="image">

                            }

                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Blog Bulunmuyor daha önce Blog paylaşmamışsınız <a href="/Blog/BlogInsert" class="text-info">buraya tıklayarak</a> ilk bloğunuzu Paylaşın ! </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="d-flex mt-5 align-items-top">
                    <img src="@ViewBag.writerımage" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@ViewBag.author.WriterName - @ViewBag.WriterMail </h5>
                        <p class="mb-0 font-weight-light">@ViewBag.author.WriterAbout</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
