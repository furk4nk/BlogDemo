@model BlogDemo.Models.UserRegisterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Blogsar | Kayıt Ol</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/AdminWeb/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminWeb/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminWeb/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminWeb/css/animate.css" rel="stylesheet">
    <link href="~/AdminWeb/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">FK+</h1>

            </div>
            <h3>Kayıt Ol</h3>
            <p>Kayıt olmak artık daha kolay.</p>
            <form class="m-t" role="form" asp-action="Index" asp-controller="Register">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="NameSurname"></span>
                    <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="NameSurname">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <input type="password" class="form-control" placeholder="Şifreniz" asp-for="Password">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="Accept"></span>
                    <label>
                        <input type="checkbox" id="sweet" asp-for="Accept">
                        <i></i> Kullanım <a href="#">Şartlarını</a> kabul ediyorum
                    </label>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten Hesabın Varmı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>
            </form>
            <p class="m-t">
                <small>
                    © @DateTime.Now.Year YazılımcıSarma. Tüm Hakları Saklıdır | Dizayn Sahibi
                    <a href="http://w3layouts.com/">W3layouts</a>
                </small>
            </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminWeb/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminWeb/js/popper.min.js"></script>
    <script src="~/AdminWeb/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/AdminWeb/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $("#sweet").click(function () {
                console.log("burdayım");
                x = document.getElementById("sweet");
                console.log(x);
                if (x.checked === true) {
                    swal({
                        title: "Onaylandı",
                        text: "Hizmet Şartları Kabul edildi",
                        icon: "success",
                        button: "Tamam"
                    });
                }
                else {
                    swal({
                        title: "Onay Kaldırıldı",
                        text: "Kaydolmanız için Hizmet Şartlarını Kabul Etmelisiniz",
                        icon: "warning",
                        button: "Tamam"
                    });
                }
            });
        });

        function typeToText(id) {
            var x = document.getElementById(id);
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</body>
</html>




