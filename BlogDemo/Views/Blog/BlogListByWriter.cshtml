@using EntityLayer.Concrete
@model List<Blog>
@{
	ViewData["Title"] = "BlogListByWriter";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Blog Listesi</h1>
@if (Model.Count == 0)
{
	<div style="text-align=center">
		<h4>Blog Bulunmuyor</h4>
	</div>

}
else
{
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Başlık</th>
				<th>Oluşturulma Tarihi</th>
				<th>Kategori</th>
				<th>Durum</th>
				<th>Sil</th>
				<th>Düzenle</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				string durum;
				if (item.BlogStatus == true)
				{
					durum = "Aktif";
				}
				else
				{
					durum = "Pasif";
				}
				<tr>
					<td>@item.BlogID</td>
					<td>@item.BlogTitle</td>
					<td>@item.BlogCreateDate.ToShortDateString()</td>
					<td>@item.category.CategoryName</td>
					@if (durum == "Aktif")                             @*buton yardımıyla aktif veya pasif olarak ayarlanabilir*@
					{
						<td><a href="/Blog/ChangeBlogStatus/@item.BlogID" class="btn btn-outline-success">@durum</a></td>
					}
					else
					{
						<td><a href="/Blog/ChangeBlogStatus/@item.BlogID" class="btn btn-outline-warning">@durum</a></td>
					}
										
					<td><a href="/Blog/BlogDelete/@item.BlogID" class="btn btn-danger btnsil">Sil</a></td>
					<td><a href="/Blog/BlogUpdate/@item.BlogID" class="btn btn-info">Düzenle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a class="btn btn-primary" href="/Blog/BlogInsert/">Yeni Blog Ekle</a>
}



