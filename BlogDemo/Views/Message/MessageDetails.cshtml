@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj İçeriği</h4><br/>

            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputUsername1">Konu</label>
                    <input type="text" class="form-control" disabled="disabled" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Gönderen</label>
                    <input type="email" class="form-control" disabled="disabled" asp-for="SenderID">
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    <textarea cols="10" rows="10" class="form-control" disabled="disabled" asp-for="MessageContent">
                    </textarea>
                </div>
                <a href="/Message/InBox" class="btn btn-outline-behance">Geri Dön</a>
            </form>
        </div>
    </div>
</div>
