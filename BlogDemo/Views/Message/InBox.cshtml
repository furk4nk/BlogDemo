@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4> <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Konu</th>
                        <th>Gönderen</th>
                        <th>Tarih</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Subject</td>
                            <td>@item.SenderUser.WriterName</td>
                            <td>@item.MessageDate</td>
                            <td><a href="/Message/MessageDetails/@item.ID" class="btn btn-inverse-primary">Mesajı Gör</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

