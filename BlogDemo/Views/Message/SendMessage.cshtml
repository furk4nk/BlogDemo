@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Mesajın İçeriği</h4><br />

            <form class="forms-sample" method="post" asp-action="SendMessage" asp-controller="Message">
                <div class="form-group">
                    <label for="exampleInputUsername1">Konu</label>
                    <span class="text-danger" asp-validation-for="Subject"></span>
                    <input type="text" class="form-control" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Alıcı</label>
                    <span class="text-danger" asp-validation-for="ReceiverUser.WriterMail"></span>
                    <input type="email" class="form-control" asp-for="ReceiverUser.WriterMail">
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    <span class="text-danger" asp-validation-for="MessageContent"></span>
                    <textarea cols="10" rows="10" class="form-control" asp-for="MessageContent"></textarea>
                </div>
                <button class="btn btn-outline-primary">Gönder</button>
                <a href="/Message/SendBox" class="btn btn-outline-behance">Geri Dön</a>
            </form>
        </div>
    </div>
</div>




