@model BlogDemo.Models.WriterPasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şifre Güncelle</h4>
            <form class="forms-sample" method="post" asp-action="PasswordChange" asp-controller="Writer">
                <div class="form-group">
                    <label for="exampleInputUsername1">Mevcut Şifreniz</label>
                    <span class="text-danger" asp-validation-for="oldPassword"></span>
                    <input type="password" class="form-control" name="oldPassword">
                </div> <br/>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <span class="text-danger" asp-validation-for="newPassword"></span>
                    <input type="password" class="form-control" name="newPassword" id="passwordIn3">
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" onclick="togglePass('3')"> Şifreyi Göster
                    </label>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <span class="text-danger" asp-validation-for="confirmNewPassword"></span>
                    <input type="password" class="form-control" name="confirmNewPassword" id="passwordIn4">
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" onclick="togglePass('4')"> Şifreyi Göster
                    </label>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Şifreyi Değiştir</button>
                <a href="/Writer/UpdateWriter" class="btn btn-light">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
